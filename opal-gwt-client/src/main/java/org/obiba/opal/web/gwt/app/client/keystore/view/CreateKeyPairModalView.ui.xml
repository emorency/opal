<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="modal" resizable="false" closeVisible="true" keyboard="true" animation="false">
    <g:FlowPanel>

      <g:FlowPanel>
        <b:Paragraph>
          <ui:msg description="Create Key Pair Modal Private key">Private Key</ui:msg>
        </b:Paragraph>
        <b:ControlGroup ui:field="algorithmGroup">
          <b:ControlLabel>
            <ui:msg description="Create Key Pair Modal Algorithm label">Algorithm</ui:msg>
            <o:RequiredIcon/>
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox ui:field="algorithm"/>
          </b:Controls>
        </b:ControlGroup>

        <b:ControlGroup ui:field="sizeGroup">
          <b:ControlLabel>
            <ui:msg description="Size label">Size</ui:msg>
            <o:RequiredIcon/>
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox ui:field="size"/>
          </b:Controls>
        </b:ControlGroup>
      </g:FlowPanel>

      <g:FlowPanel>
        <b:Paragraph>
          <ui:msg description="Create Key Pair Modal Public Key">Public Key (Certificate)</ui:msg>
        </b:Paragraph>
        <b:ControlGroup ui:field="firstLastNameGroup">
          <b:ControlLabel>
            <ui:msg description="Create Key Pair Modal First Last Name label">First and Last Name</ui:msg>
            <o:RequiredIcon/>
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox ui:field="firstLastName"/>
          </b:Controls>
        </b:ControlGroup>

        <b:ControlGroup ui:field="organizationalUnitGroup">
          <b:ControlLabel>
            <ui:msg description="Create Key Pair Modal Organization label">Organizational Unit</ui:msg>
            <o:RequiredIcon/>
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox ui:field="organizationalUnit"/>
          </b:Controls>
        </b:ControlGroup>
      </g:FlowPanel>
    </g:FlowPanel>

    <b:ModalFooter>
      <b:Button type="PRIMARY" ui:field="saveButton">
        <ui:msg description="Save label">Save</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Cancel label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>
  </o:Modal>

</ui:UiBinder>