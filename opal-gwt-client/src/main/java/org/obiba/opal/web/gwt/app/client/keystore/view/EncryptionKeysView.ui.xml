<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <b:ControlGroup>
      <b:Controls>
        <b:FluidRow addStyleNames="no-bottom-margin">
          <b:Column size="3">
            <b:Heading size="4" ui:field="principal"></b:Heading>
          </b:Column>
          <b:Column size="9">
            <b:Button type="DANGER" ui:field="deleteAll" addStyleNames="pull-right">
              <ui:msg description="Delete All label">Delete All</ui:msg>
            </b:Button>
            <b:SimplePager ui:field="tablePager" location="RIGHT" addStyleNames="pull-right"/>
          </b:Column>
        </b:FluidRow>
      </b:Controls>
    </b:ControlGroup>
    <o:Table ui:field="permissionsTable"/>

  </g:FlowPanel>

</ui:UiBinder>